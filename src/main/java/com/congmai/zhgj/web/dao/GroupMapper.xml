<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.congmai.zhgj.web.dao.GroupMapper">
    <resultMap id="BaseResultMap" type="com.congmai.zhgj.web.model.Group">
        <id column="group_id" property="id" jdbcType="INTEGER" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="type" property="type" jdbcType="VARCHAR" />
    </resultMap>
    <!-- 通过组id 查询组信息 -->
    <select id="selectGroupById" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        SELECT g.* FROM T_GROUP g 
        WHERE g.group_id = #{id,jdbcType=INTEGER}
    </select>
</mapper>